<style>
.btn-devise {
  background-color: #3B6B94;
  border-color: #3B6B94;
  color: white;
  margin-right: 10px;
}

.btn-devise:hover {
  background-color: #74ABDE;
  border-color: #74ABDE;
  color: white;
  margin-right: 10px;
}
</style>

<div class="container">
<section class="vh-100" style="background-color: #EDEDED">
<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), data: { turbo: :false }) do |f| %>
    <div class="container h-100">
      <div class="form-inputs">
        <div class="row justify-content-center align-items-center h-100">
          <div class="col-lg-12 col-xl-11">
            <div class="card text-black" style="border-radius: 25px; margin-top: 30px;">
              <div class="card-body p-md-5">
                <div class="row justify-content-center">
                  <div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1">

                        <p class="text-center h1 fw-bold mb-5 mx-1 mx-md-4 mt-4">Log in</p>

                          <div class="d-flex flex-row align-items-center mb-4">
                            <i class="fas fa-envelope fa-lg me-3 fa-fw"></i>
                            <%= f.input :email,
                              required: false,
                              autofocus: true,
                              input_html: { autocomplete: "email" },
                              wrapper_html: { class: 'flex-grow-1' } %>
                          </div>

                          <div class="d-flex flex-row align-items-center mb-2">
                            <i class="fas fa-lock fa-lg me-3 fa-fw"></i>
                            <%= f.input :password,
                              required: false,
                              input_html: { autocomplete: "current-password" },
                              wrapper_html: { class: 'flex-grow-1' } %>
                          </div>

                          <div class="form-actions d-flex mb-2 ml-5">
                          <i class="fas fa-lock fa-lg me-3 fa-fw" style="color: white;"></i>
                          <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
                              <%= link_to "Forgot your password?", new_password_path(resource_name), class: "btn btn-devise" %><br />
                              <% end %>
                          </div>
                          <div class="form-actions d-flex">
                          <i class="fas fa-lock fa-lg me-3 fa-fw" style="color: white;"></i>
                            <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
                          </div>


                          <div class="form-actions d-flex justify-content-center m-3" >
                            <%= f.button :submit, "Log in", class: "btn btn-devise", input_html: {role: "button"}%>
                            <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
                            <%= link_to "Sign up", new_registration_path(resource_name), class: "btn btn-devise" %><br />
                            <% end %>
                            </div>
                            <% end %>

                          </div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
          </div>
        </div>
</section>
</div>
