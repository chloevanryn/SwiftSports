<section class="vh-100" style="background-color: #EDEDED">
<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), data: { turbo: :false }) do |f| %>
  <%= f.error_notification %>
    <div class="container h-100">
      <div class="form-inputs">
        <div class="row justify-content-center align-items-center h-100">
          <div class="col-lg-12 col-xl-11">
            <div class="card text-black" style="border-radius: 25px; margin-top: 30px;">
              <div class="card-body p-md-5">
                <div class="row justify-content-center">
                  <div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1">

                    <p class="text-center h1 fw-bold mb-5 mx-1 mx-md-4 mt-4">Sign up</p>

                      <div class="d-flex flex-row align-items-center mb-4">
                        <i class="fas fa-user fa-lg me-3 fa-fw"></i>
                        <%= f.input :username,
                          required: true,
                          autofocus: true,
                          input_html: { autocomplete: "username" },
                          wrapper_html: { class: 'flex-grow-1' } %>
                      </div>

                      <div class="d-flex flex-row align-items-center mb-4">
                        <i class="fas fa-envelope fa-lg me-3 fa-fw"></i>
                        <%= f.input :email,
                          required: true,
                          autofocus: true,
                          input_html: { autocomplete: "email" },
                          wrapper_html: { class: 'flex-grow-1' }%>
                      </div>

                      <div class="d-flex flex-row align-items-center mb-4">
                        <i class="fas fa-lock fa-lg me-3 fa-fw"></i>
                        <%= f.input :password,
                          required: true,
                          hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                          input_html: { autocomplete: "new-password" },
                          wrapper_html: { class: 'flex-grow-1' } %>
                      </div>

                      <div class="d-flex flex-row align-items-center mb-4">
                        <i class="fas fa-key fa-lg me-3 fa-fw"></i>
                        <%= f.input :password_confirmation,
                        required: true,
                        input_html: { autocomplete: "new-password" },
                        wrapper_html: { class: 'flex-grow-1' } %>
                      </div>

                      <div class="d-flex flex-row align-items-center mb-4">
                        <i class="fas fa-solid fa-image fa-lg me-3 fa-fw"></i>

                        <%= f.input :photo, as: :file,
                        required: true,
                        wrapper_html: { class: 'flex-grow-1' } %>
                      </div>

                      <div class="form-actions" style="justify-content: center">

                        <%= f.button :submit, "Sign Up", class: "btn btn-primary", input_html: {role: "button"}%>
                        <% end %>
                      </div>
                      </div>

                  </div>
                  <%= render "devise/shared/links" %>
                  <div class="col-md-10 col-lg-6 col-xl-7 d-flex align-items-center order-1 order-lg-2">

                  </div>
                </div>
              </div>
            </div>
          </div>
      </div>
    </div>
</section>
