

<div class="container mt-5">
<h1>Athletes Near You!</h1>
  <% @users.each do |user| %>
    <div class="row align-items-center">
      <div class="col-md-2">
        <%= image_tag "https://i2.wp.com/www.rosiejensing.com/wp-content/uploads/2015/09/jesuspic.jpg", class: 'img-fluid rounded-circle', height: '75', width: '75' %>
      </div>
      <div class="col-md-10">
        <h4><%= link_to user.username, user_path(user) %></h4>
      </div>
    </div>
  <% end %>
</div>
