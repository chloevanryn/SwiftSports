<style>
  .pic {
    object-fit: cover;
    height: 200px;
    width: 200px;
    padding-top: 5px;
  }

  .sportcircle {
    background-color: white;
    padding: 6px;
    height: 60px;
    width: 60px;
    border-radius: 50%;
    display: inline-block;
  }

  .card {
  margin-top: 80px;
  box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2);
  max-width: 300px;
  text-align: center;
  border-radius: 5%;
  align-items: center;
  justify-content: center;
}

</style>

<div class="card">
  <% if @user.photo.attached? %>
  <%= cl_image_tag @user.photo.key, class: 'rounded-circle pic' %>
  <% else %>
  <%= image_tag "default_avatar.png", class: 'rounded-circle pic' %>
  <% end %>
  <h1><%= @user.username %></h1>
  <% @user.user_sports.each do |sport| %>
  <%= image_tag sport.sport.photo, class: 'sportcircle' %>
  <% end %>
</div>

  <% if @user == current_user %>
  <%= link_to "Edit Profile", edit_user_registration_path(@user), class: "btn btn-secondary" %>
  <% end %>
  <% if @user != current_user %>
  <%= link_to "Tell us about the user", new_user_rating_path(@user), class: "btn btn-default", input_html: {role: "button"}%>
  <% end %>

  <% @user.ratings.each do |f| %>
    <p><%= f.comment %></p>
  <% end %>
