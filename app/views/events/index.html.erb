<div class="container">
<h1>All Sporting Events</h1>
  <div class="container">
    <div style="width: 100%; height: 600px;"
      data-controller="map"
      data-map-markers-value="<%= @markers.to_json %>"
      data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
    </div>
  </div>

<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" integrity="sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z" crossorigin="anonymous">
<link href="https://fonts.googleapis.com/css2?family=Karla:wght@400;700&display=swap" rel="stylesheet">

<style>
  body {
    font-family: 'Karla', sans-serif;
  }
</style>

<div class="container mt-5">
  <div class="row">
    <div class="col-12 text-center">
      <h1 class="text-primary">Sporting Events</h1>
      <% if current_user %>
        <%= link_to 'Create New Event', new_event_path, class: 'btn btn-primary' %>
      <% end %>
    </div>
  </div>

  <div class="row mt-5">
    <div class="col-12">
      <ul class="list-group">
        <% @events.each do |event| %>
          <li class="list-group-item">
            <%= link_to event.title, event_path(event), class: "text-primary" %>
            <br>
            <span class="text-secondary" style="muted"><%= event.date %></span>
            <br>
            <span class="text-secondary" style="muted"><%= event.time %></span>
            <br>
            <span class="text-secondary" style="muted"><%= event.location %></span>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
