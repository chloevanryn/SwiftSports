<div class="container">
<h1>All Sporting Events</h1>
  <div class="container">
    <div style="width: 100%; height: 600px;"
      data-controller="map"
      data-map-markers-value="<%= @markers.to_json %>"
      data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
    </div>
  </div>
    <div class="container">
      <ul>
        <% @events.each do |event| %>
        <li><%= link_to event.title, event_path(event) %></li>
        <% end %>
      </ul>
    </div>
</div>
