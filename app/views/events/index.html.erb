<style>
 body {
    font-family: 'Karla', sans-serif;
    background-color: #E3E2DE;
  }
</style>

<div class="container">
  <h1 class="text-center" style="padding: 30px"><b>All Sporting Events</b></h1>
  <div class="container">
    <div style="width: 100%; height: 500px; border-radius: 20px; border: 1px solid lightgrey; box-shadow: none; background-color: transparent;"
      data-controller="map"
      data-map-markers-value="<%= @markers.to_json %>"
      data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
    </div>
  </div>
</div>

<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" integrity="sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z" crossorigin="anonymous">
<link href="https://fonts.googleapis.com/css2?family=Karla:wght@400;700&display=swap" rel="stylesheet">

<style>
 body {
    font-family: 'Karla', sans-serif;
    background-color: #E3E2DE;
  }
</style>

<div class="container mt-5">
  <div class="row">
    <div class="col-12 text-center">
      <% if current_user %>
        <%= link_to 'Create New Event', new_event_path, class: 'btn btn-primary btn-lg' %>
      <% end %>
    </div>
  </div>

  <div class="row mt-5">
    <div class="col-12">
      <ul class="cards">
        <% @events.each do |event| %>
          <%= link_to event_path(event), class: "text-primary" do %>
            <li class="list-group-item text-center card" style="background-color: lightgrey">
              <span class="text-secondary" style="muted; font-size: 20px"><b><%= event.title %></b></span>
              <br>
              <span class="text-secondary" style="muted"></span>
              <br>
              <span class="text-secondary" style="muted"><b>Location:</b> <%= event.location %></span>
              <br>
              <span class="text-secondary" style="muted"><b>Date:</b> <%= event.date %></span>
            </li>
          <% end %>
        <% end %>
      </ul>
    </div>
  </div>
</div>
