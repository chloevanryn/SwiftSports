<style>
.btn-primary{
  background-color: #3B6B94;
  border-color: transparent;
}
.btn-primary:hover{
  background-color: #74ABDE;
  border-color: transparent;
}
</style>

<div class="container" style="padding: 50px">
  <h1 class="text-center"> Update the event:</h1>
  <%= simple_form_for @event, url: event_path(@event), method: :patch do |f| %>
  <div class="card-trip">
    <h3><%= f.input :title %></h3>
    <%= f.association :sport %>
    <%= f.association :level %>
    <%= f.input :description %>
    <%= f.input :location,
      input_html: {data: {address_autocomplete_target: "address"}},
      wrapper_html: {data: {controller: "address-autocomplete", address_autocomplete_api_key_value: ENV["MAPBOX_API_KEY"]}} %>
    <%= f.input :date %>
    <%= f.input :time %>
    <%= f.input :photo, as: :file, required: false, input_html: { style: "border-color: lightgrey;"} %>

  <div class="form-actions d-flex justify-content-between">
    <%= f.button :submit, "Update", class: "btn btn-primary"%>
    <%= link_to "Back to the event", event_path(@event), class: "btn btn-outline-secondary", input_html: {role: "button"}%>
  <% end %>
  </div>
  </div>
</div>
