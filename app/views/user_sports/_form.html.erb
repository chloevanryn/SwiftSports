<%= simple_form_for(@user_sport) do |f| %>
    <%= f.input :sport,
      as: :check_boxes,
      collection_wrapper_tag: 'div',
      collection_wrapper_class: 'sport-wrapper',
      item_wrapper_class: 'sport-item',
      input_html: {class: 'sport-selector', multiple: true},
      label_text: false,
      collection: @collection %>
    <%= f.button :submit, "Add Sports",
      class: "btn btn-primary mx-auto",
      input_html: {role: "button"} %>
  <% end %>
